R2_BUCKET_NAME=your-bucket-name
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
R2_REGION_NAME=auto
# Optional: Custom domain for serving files (recommended for production)
R2_CUSTOM_DOMAIN=your-custom-domain.com

